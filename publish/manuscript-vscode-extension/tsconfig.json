{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "build",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
